<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  
  <!-- ═══════════════════════════════════════════════════════════════
       VG10 GRIPPER MACRO
       ═══════════════════════════════════════════════════════════════ -->
  
  <xacro:macro name="onrobot_vg10" params="prefix">
    
    <!-- Base Link -->
    <link name="${prefix}onrobot_vg_base_link">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <mass value="0.65" />
        <inertia ixx="1.0E-03" ixy="1.0E-06" ixz="1.0E-06" iyy="1.0E-03" iyz="1.0E-06" izz="1.0E-03" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://onrobot_descriptions/meshes/vg_series/vg10/visual/base_link.stl" />
        </geometry>
        <material name="">
          <color rgba="0.8 0.8 0.8 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://onrobot_descriptions/meshes/vg_series/vg10/collision/base_link.stl" />
        </geometry>
      </collision>
    </link>
    
    <!-- Suction Pad -->
    <link name="${prefix}suction_pad">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        <mass value="0.3" />
        <inertia ixx="1.0E-03" ixy="1.0E-06" ixz="1.0E-06" iyy="1.0E-03" iyz="1.0E-06" izz="1.0E-03" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://onrobot_descriptions/meshes/vg_series/vg10/visual/suction_cups.stl" />
        </geometry>
        <material name="">
          <color rgba="0.1 0.1 0.1 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://onrobot_descriptions/meshes/vg_series/vg10/collision/suction_cups.stl" />
        </geometry>
      </collision>
    </link>
    
    <joint name="${prefix}_suction_pad_joint" type="fixed">
      <origin xyz="0 0 0.12" rpy="0 0 0" />
      <parent link="${prefix}onrobot_vg_base_link" />
      <child link="${prefix}suction_pad" />
    </joint>
    
    <!-- Virtual suction regulator link for ros2_control -->
    <link name="${prefix}suction_regulator">
      <inertial>
        <mass value="0.001"/>
        <inertia ixx="1.0E-09" ixy="0.0" ixz="0.0" iyy="1.0E-09" iyz="0.0" izz="1.0E-09"/>
      </inertial>
    </link>
    
    <!-- Virtual joint for vacuum control (0-80 kPa) -->
    <joint name="${prefix}_suction_regulator_joint" type="prismatic">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}onrobot_vg_base_link"/>
      <child link="${prefix}suction_regulator"/>
      <axis xyz="0 0 1"/>
      <limit lower="0.0" upper="80.0" effort="100.0" velocity="0.2"/>
      <dynamics damping="0.1" friction="0.0"/>
    </joint>
    
  </xacro:macro>
  
</robot>
